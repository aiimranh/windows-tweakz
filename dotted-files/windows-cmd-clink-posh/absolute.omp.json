{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks":[
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "foreground": "#100e23",
          "background": "#ffe9aa",
          "properties": {
            "root_icon": "PS"
          }
        },
        {
          "type":"path",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "foreground": "#100e23",
          "background": "#906cff",
          "properties": {
            "prefix": " \uE5FF ",
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "background": "lightCyan",
          "foreground": "#49404f",
          "properties": {
            "display_stash_count": true,
            "display_upstream_icon": true,
            "status_colors_enabled": true,
            "display_status": true,
            "local_changes_color": "#ff9248",
            "ahead_and_behind_color": "#f26d50",
            "behind_color": "#f17c37",
            "ahead_color": "#89d1dc",
            "stash_count_icon": "\uF692 "
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "exit",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "foreground": "#242424",
          "background": "#90EE90",
          "properties": {
            "display_exit_code": false,
            "always_enabled": true,
            "color_background": true,
            "error_color": "#f1184c",
            "success_icon":"✔",
            "error_icon":"✘"
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "foreground": "#ffffff",
          "background": "#49404f",
          "properties": {
            "threshold": 0,
            "style": "dallas",
            "postfix": "s "
          }
        },
        {
          "type": "time",
          "style": "diamond",
          "leading_diamond": "\uE0C7",
          "trailing_diamond": "\uE0C6",
          "foreground": "#fff",
          "background": "#003543",
          "properties": {
            "prefix": "<#fff> \uf64f </>",
            "time_format": "3:04:05 PM"
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "#F5F5F5",
          "properties": {
            "prefix": "",
            "text": "\uFB26"
          }
        }
      ]
    }
  ]
}
